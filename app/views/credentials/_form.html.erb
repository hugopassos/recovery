<%= form_for(@credential, remote: true) do |f| %>
	
	<%= f.label :site %><br />
	<%= f.text_field :site, placeholder: "Site", required: true %><br /><br />

	<%= f.label :login %><br />
	<%= f.text_field :login, placeholder: "Login", required: true  %><br /><br />
	
	<%= f.label :password %><br />
	<%= f.password_field :password, placeholder: "Password", required: true %><br /><br />

	<%= f.submit :class => "formbutton"%>
<%end%>