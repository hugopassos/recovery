<style>
.notes_content{
	background-color: #FFFFFF;
	width: 600px;
	margin-top: 1px;
	padding-top: 22px;
	padding-bottom: 5px;
}

.notes_item{
	background-color: #DCDDD7;
	width: 400px;
	margin-left: 30px;
	margin-top: 6px;
}

.notes_item p {
	color: white;
	margin-left: 10px; 
	box-shadow:         7px 7px 5px 0px rgba(50, 50, 50, 0.75);
}
</style>

<div class="notes_content">
	All Notes
	<% @notes.each do |note|%>
		<div class="notes_item">
    		<p><a href="#" value="/notes/<%= note.id%>" class="notes_a"> <%= note.title %></a><p>
    	</div>
	<% end %>
</div>





<script>
	$(".notes_a").on("click", function(){
		var url = $(this).attr("value");
		coloboxHTML(url);
	});
</script>