<%= form_for(@note, remote: true) do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title, placeholder: "Title", required: true %><br /><br />

    <%= f.label :body %><br />
    <%= f.text_area :body, placeholder: "Body", :cols => "60", :rows => "10", required: true %><br /><br />
    <%= f.submit%>
<% end %>
