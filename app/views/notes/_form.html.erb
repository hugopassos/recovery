<%= form_for(@note, remote: true) do |f| %>

  <%= f.label :title %><br />
  <%= f.text_field :title, placeholder: "Title", required: true %><br /><br />

  <%= f.label :body %><br />
  <%= f.text_area :body, value: @note.unsafe_body, placeholder: "Body", :cols => "60", :rows => "10", required: true %><br /><br />
  <%= f.label :category_id %>
	<%= f.select :category_id, CategoriesHelper::options_for_select %><br />
	<br>
  <%= f.submit%>
<% end %>
