<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script>
function getValue(id){
	return $("#"+id)[0].value 
}

function requestTo(){
	var value = { login: getValue('log_login'), password: getValue('log_password') }
	$.ajax({
	  type: "GET",
	  url: "main/1",
	  data: value
	})
}
</script>

<div style='color:#fff;background-color: red; position:absolute; left: 850px; top: 17px;'>
	<%= form_for :user_login do |log|%>
	Login <%= text_field_tag :login, nil, :placeholder => "Login", :id => "log_login"%>  Password <%= text_field_tag :password, nil, placeholder: "Password", :id => "log_password"%>
	<%end%>
	<%= button_tag :Login, :onclick => "requestTo()"%>

</div>

<div style='color:#fff;background-color: red; position:absolute; left: 50px; top: 40px;'>
<%=form_for :user do |u|%>
	<b>Login</b><br />
	<%= text_field_tag :login, nil, :placeholder => "Login"%><br /><br />
	<b>Email</b><br />
	<%= text_field_tag :email, nil, :placeholder => "Email"%><br /><br />
	<b>Password</b><br />
	<%= text_field_tag :password, nil, :placeholder => "Password"%><br /><br />
	<b>Confirm Password</b><br />
	<%= text_field_tag :password_conf, nil, :placeholder => "Password"%><br /><br />
	<%= u.button "Confirm"%>
<%end%>
</div>