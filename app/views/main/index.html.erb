<style>
	.login_form {
	  width: 580px;
	  height: 70px;
	  padding-top:60px;
	  position:absolute;
	  left: 740px;
	  top: 40px;
	  border: double;
	  -webkit-border-radius: 12px 21px 32px 12px;
	  border-radius: 12px 21px 32px 12px;
	}


	.register {
	  width: 200px;
	  height: 310px;
	  padding-top:60px;
	  position:absolute;
	  left: 50px;
	  top: 40px;
	  border: double;
	  -webkit-border-radius: 12px 21px 32px 12px;
	  border-radius: 12px 21px 32px 12px;
	  padding: 40px;
	}

